[Unit]
Description=Restore ipsets at boot
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
ExecStart=/bin/bash -c '/usr/sbin/ipset destroy allow_all || true; /usr/sbin/ipset destroy whitelist || true; /usr/sbin/ipset restore < /etc/ipset.conf'
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
